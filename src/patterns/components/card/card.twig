{{ attach_library('components_theme/card') }}

<article class="card{{ modifer ? ' ' ~ modifier }}
{{ attributes ? ' ' ~ attributes.class }}"
{{ attributes ? ' ' ~ attributes|without(class)}}>

{% if image %}
  <div class="card__image">
    {{ image }}
  </div>
{% endif %}

<div class="card__content">
  {% if date %}
    {%
      include '@components_theme/eyebrow/eyebrow.twig' with {
        "modifier": 'card__date',
        "text": date,
      } only
    %}
  {% endif %}

  {% if heading %}
    {{ title_prefix }}
    {%
      include '@components_theme/heading/heading.twig' with {
        "heading": heading,
      } only
    %}
    {{ title_suffix }}
  {% endif %}

  {% if body %}
    <div class="card__body">
      {{ body }}
    </div>
  {% endif %}

  {% if cta %}
    {%
      include '@components_theme/button/button.twig' with {
        "button": cta,
      } only
    %}
  {% endif %}
</div>
</article>
